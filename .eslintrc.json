{
  "extends": [
    "next/core-web-vitals", 
    "next/typescript"
  ],
  "rules": {
    "indent": ["error", 4],
    "semi": ["error", "always"],
    "react/jsx-curly-brace-presence": ["error", { "props": "never", "children": "never" }],
    "react/jsx-indent": ["error", 4],
    "quotes": ["error", "single"],
    "prefer-template": "error",
    "object-shorthand": ["error", "always"],
    "no-multi-spaces": "error"
  }
}
